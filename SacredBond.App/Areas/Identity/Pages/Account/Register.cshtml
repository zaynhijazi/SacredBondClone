@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-5">
        <section class="mt-5 bg-white p-5 shadow-sm border">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Step 1: Register</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-floating">
                            <input asp-for="Input.FirstName" class="form-control" autocomplete="on" aria-required="true" />
                            <label asp-for="Input.FirstName"></label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating">
                            <input asp-for="Input.LastName" class="form-control" autocomplete="on" aria-required="true" />
                            <label asp-for="Input.LastName"></label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-floating">
                    <select asp-for="Input.Gender" class="form-select" autocomplete="on" aria-required="true">
                        <option selected></option>
                        <option value="1">Male</option>
                        <option value="2">Female</option>
                    </select>
                    <label asp-for="Input.Gender"></label>
                    <span asp-validation-for="Input.Gender" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="on" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="on" aria-required="true" />
                    <label asp-for="Input.PhoneNumber"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="on" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <div class="bg-light text-center p-2">
                        <h3 class="mb-0"><sup><small>$</small></sup>9.99 / <span class="price-small">Per month</span></h3>
                    </div>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.CardNumber" class="form-control" autocomplete="on" aria-required="true" />
                    <label asp-for="Input.CardNumber"></label>
                    <span asp-validation-for="Input.CardNumber" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-4">
                        <div class="form-floating">
                            <select asp-for="Input.EXPMonth" class="form-select" autocomplete="on" aria-required="true">
                                <option selected></option>
                                <option value="1">01</option>
                                <option value="2">02</option>
                                <option value="3">03</option>
                                <option value="4">04</option>
                                <option value="5">05</option>
                                <option value="6">06</option>
                                <option value="7">07</option>
                                <option value="8">08</option>
                                <option value="9">09</option>
                                <option value="10">10</option>
                                <option value="11">11</option>
                                <option value="12">12</option>
                            </select>
                            <label asp-for="Input.EXPMonth"></label>
                            <span asp-validation-for="Input.EXPMonth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-floating">
                            <select asp-for="Input.EXPYear" class="form-select" autocomplete="on" aria-required="true">
                                <option selected></option>
                                @for (int i = DateTime.Today.Year; i <= DateTime.Today.Year + 10; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                            <label asp-for="Input.EXPYear"></label>
                            <span asp-validation-for="Input.EXPYear" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-floating">
                            <input asp-for="Input.CVC" class="form-control" autocomplete="on" aria-required="true" />
                            <label asp-for="Input.CVC"></label>
                            <span asp-validation-for="Input.CVC" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="agreement-box">
                    <input type="checkbox" class="form-check-input" asp-for="Input.AgreeTerms" required
                           data-msg-required="You must agree to the terms of service." />
                    <label for="AgreeTerms" class="d-inline ms-2">I Agree to Sacred Bond's <a href="https://sacredbond.org/terms/">Terms and Conditions</a> and <a href="https://sacredbond.org/privacy/">Privacy Policy</a></label>
                    <span asp-validation-for="Input.AgreeTerms" class="text-danger d-block"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-2">Register</button>
            </form>
        </section>
    </div>
    <div class="col-md-7">
        <section class="mt-5 bg-white p-5 shadow-sm border">
            <h2 class="mb-3">How it works?</h2>
            <hr />
            <h4>
                <img src="/images/step.png" />
                <strong>Step 1: Register</strong>
            </h4>
            <p>
                Register for Sacred Bond Matrimonial Services. You’ll receive a confirmation email and a link to fill out your profile.
            </p>
            <h4 class="mt-4">
                <img src="/images/step.png" />                
                <strong>Step 2: Create your profile</strong>
            </h4>
            <p>
                Complete your profile page to tell us more about yourself and what you are seeking in a spouse.
            </p>
            <h4 class="mt-4">
                <img src="/images/step.png" />
                <strong>Step 3: Consultation</strong>
            </h4>
            <p>
                A Sacred Bond Marriage Counselor will call you for a 30-minute consultation to get to know you and your preferences better.
            </p>
            <h4 class="mt-4">
                <img src="/images/step.png" />
                <strong>Step 4: Connect</strong>
            </h4>
            <p>
                Connect with potential matches in a safe and Islamically-compliant way. Once a match is found, and there is a mutual interest, we will share the full profile with both parties. If both parties like to proceed, you can start communicating with each other. For sisters, a Wali (Guardian) will be copied in all communications.
            </p>
            <p>
                At any stage, if you need help, please do not hesitate to contact <a href="mailto:info@sacredbond.org">info@sacredbond.org</a>.
            </p>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
